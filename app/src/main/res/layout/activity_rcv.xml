<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E61212"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="Features"
            android:textAllCaps="true"
            android:textColor="#A9B3A3A3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="Deals"
            android:textAllCaps="true"
            android:textColor="#A9B3A3A3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="CATEGORIES"
            android:textAllCaps="true"
            android:textColor="#A9B3A3A3" />
    </LinearLayout>

    <TextView
        android:id="@+id/card_back"
        style="@style/flashcardStyle"
        android:layout_width="360dp"
        android:layout_height="139dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:text="C. object have to implements Serializable, then putExtra object to intent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/card_front"
        style="@style/flashcardStyle"
        android:layout_width="360dp"
        android:layout_height="139dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:text="
        PT2=Q7=How to pass an object to other activity?
        A. object extends Serializable putExtra object to intent
        B. only putExtra object to intent
        C. object have to implements Serializable, then putExtra object to intent
        D. Can't pass object by intent
        "
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/flip_btn"
        style="@style/btnStyle"
        android:text="Flip me"
        app:layout_constraintBottom_toTopOf="@+id/rcvQA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvQA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_back" />

    <Button
        android:id="@+id/button2"
        style="@style/btnStyle"
        android:layout_marginStart="35dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="33dp"
        android:drawableLeft="@drawable/baseline_360_24"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/button"
        style="@style/btnStyle"
        android:layout_marginStart="19dp"
        android:drawableLeft="@drawable/baseline_file_copy_24"
        android:text="Thẻ ghi nhớ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/button3"
        style="@style/btnStyle"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="230dp"
        android:drawableLeft="@drawable/baseline_fact_check_24"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>