<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FlashCardLearn">


    <TextView
        android:id="@+id/card_back_learn"
        style="@style/flashcardStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="C. object have to implements Serializable, then putExtra object to intent"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="214dp" />

    <TextView
        android:id="@+id/card_front_learn"
        style="@style/flashcardStyle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="
        PT2=Q7=How to pass an object to other activity?
        A. object extends Serializable putExtra object to intent
        B. only putExtra object to intent
        C. object have to implements Serializable, then putExtra object to intent
        D. Can't pass object by intent
        "
        android:textSize="10dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="214dp" />

    <Button

        android:id="@+id/flip_btn_learn"
        style="@style/btnStyle"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:text="Flip me" />


</FrameLayout>